pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
               checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/AzHsn/Maat-System.git']]) 
            }
        }
        stage('Build and Tag Docker Image') {
            steps {
                script {
                    sh 'docker build . -t django-app:v3'
                    sh 'docker tag django-app:v3 azhn/django-app:v3'
                    sh 'docker build -t nginx-django-proxy:v2 ./nginx/ -f ./nginx/nginx-Dockerfile'
                    sh 'docker tag nginx-django-proxy:v2 azhn/nginx-django-proxy:v2'
                }
            }
        }
        stage('Push the Docker Image to DockerHUb') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'az_dockerhub', variable: 'az_dockerhub')]) {
                    sh 'docker login -u azhn -p ${az_dockerhub}'
                    }
                    sh 'docker push azhn/django-app:v3'
                    sh 'docker push azhn/nginx-django-proxy:v2'
                }
            }
        }
        stage ('Deploy to k8s'){
            steps{
                withKubeConfig(caCertificate: '', clusterName: '', contextName: '', credentialsId: 'kubeConfigFile', namespace: '', restrictKubeConfigAccess: false, serverUrl: '') {
                    sh 'kubectl apply -f ./django/db-secret.yml'
                    sh 'kubectl apply -f ./django/static-data.yml'
                    sh 'kubectl apply -f ./django/django-deployment.yml'
                    sh 'kubectl apply -f ./nginx/nginx-deployment.yml'
                }
            }
        }
        }
    }
